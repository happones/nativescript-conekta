<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page">
  <StackLayout class="p-20">
    <Label text="Exmaple form for card"/>
    <TextField text="{{ card.name }}" hint="Titular Name"/>
    <TextField text="{{ card.number }}" hint="Number Card" keyboardType="number" maxLength="16"/>
    <TextField text="{{ card.cvc }}" hint="CVC" keyboardType="number" maxLength="4"/>
    <TextField text="{{ card.expiry_month }}" hint="Month Expiry" keyboardType="number" maxLength="2"/>
    <TextField text="{{ card.expiry_year }}" hint="Year Expiry" keyboardType="number" maxLength="2"/>
    <Button text="Create Token" tap="generateToken"/>
    <Label text="{{ 'Your token is: ' + token }}"/>
  </StackLayout>
</Page>
